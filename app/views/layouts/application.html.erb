<!DOCTYPE html>
<html>
<head>
  <title>Project Management</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="header">

<%unless session[:user_id]%>
<ul class="nav">
<li><%= link_to :Register , :register, class: "nav_links"%></li>|
<li><%= link_to :Login , :login, class: "nav_links"%></li>
</ul>
<%else%>
<ul class="nav">
<li><%= link_to :Home , :projects, class: "nav_links" %> |</li>
<li><%= link_to 'New Project' , :newproj, class: "nav_links" %> |</li>

<li><%= link_to :Logout , :logout, class: "nav_links" %></li>
</ul>
<%end%>
</div>
<% if flash[:color]== "valid" %>
<div class="valid_notice">
<p><%= flash[:notice]%></p>
</div>
<% elsif flash[:color]== "invalid"%>
<div class="invalid_notice">
<p><%=flash[:notice]%></p>
</div>
<%else%>
<div class="notice">
<p><%=flash[:notice]%></p>
</div>
<%end%>
<%= yield %>

</body>
</html>
