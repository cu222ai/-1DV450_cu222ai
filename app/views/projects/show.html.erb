<div id="project"><h1><%= @project.name %></h1>

<p><strong>Description: </strong> <%= @project.description %><br />
<strong>Start Date :</strong> <%= @project.start_date %><br />
<strong>End Date:</strong> <%= @project.end_date%><br />
</p>


<h4> Tickets for <%= @project.name %>: </h4>
<% @project.tickets.each do |t| %>

<%= link_to t.name, ticket_path(t) %><br />
<br />
<% end %>

<br /> <br />
<%= link_to "New ticket", new_project_ticket_path(@project) %><br />


<b> <%= link_to 'Edit', {:action => 'edit', :id => @project.id} %></b><br />
<b> <%= link_to "Delete",  project_path(@project),
:method => :delete,
:confirm => "Are you sure you want to delete this project?" %></b>

<br /><br /><br />
<%= link_to 'Back', {:action => 'projects'} %>
</div>
