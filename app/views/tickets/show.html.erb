<div id="project"><h1>Ticket: <%= @ticket.name %></h1>

<p><strong>Description: </strong> <%= @ticket.description %><br />

<strong>Owner:</strong>
  <%= @ticket.user.username %>
  <br />

  <strong>Type:</strong>
<%= @ticket.status.status_name %>



<%  if @ticket.user.username == @ticket_id || @ticket.project.user_id == @session.id %>
<br />


<%= button_to 'Edit', {:action => 'edit', :id => @ticket.id} %>
<%= button_to "Delete", ticket_path(@ticket),
:method => :delete,
:confirm => "Are you sure you want to delete this ticket?" %>


<br /><br />
<% end %>
<%= button_to 'Back',  { :controller => 'projects', :action => 'show', :id => @ticket.project_id} %>
</div>
